{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "mocha": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "accessor-pairs": ["error"],
    "comma-dangle": ["error", "always-multiline"],
    "import/order": ["error", {
      "newlines-between": "always"
    }],
    "linebreak-style": ["error", "unix"],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "react/jsx-filename-extension": ["error", {
      "extensions": [".js", ".jsx"]
    }],
    "require-atomic-updates": ["error"],
    "valid-jsdoc": ["error"]
  }
}
